<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="#00FF0000"
    android:gravity="center"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_centerInParent="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/imageButton_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:background="@null"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:clickable="true"
                android:src="@drawable/closebutton" />
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="Nutrition statistics"
                android:textColor="#330033"
                android:textSize="22sp"
                android:typeface="serif"
                android:textStyle="bold" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtLabelCalSetting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="Total Calorie Target: "
                    android:textColor="#330033"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/txtCalSetting"
                    android:layout_width="211dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="100 grams"
                    android:typeface="serif"
                    android:textColor="#330033"
                    android:textSize="18sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtCalLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="Actual Total Calories: "
                    android:textColor="#330033"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/txtCal"
                    android:layout_width="211dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="165"
                    android:typeface="serif"
                    android:textColor="#330033"
                    android:textSize="18sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtProNecessLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="Total Protein Target: "
                    android:textColor="#330033"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/txtProteinNecess"
                    android:layout_width="211dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="85 mg"
                    android:typeface="serif"
                    android:textColor="#330033"
                    android:textSize="18sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtActualProLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="Actual Total protein: "
                    android:textColor="#330033"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/txtProtein"
                    android:layout_width="211dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="85 mg"
                    android:typeface="serif"
                    android:textColor="#330033"
                    android:textSize="18sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTotalFatNecessLabel"
                    android:layout_width="199dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="Total Fat Target: "
                    android:textColor="#330033"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/txtTotalFatNecess"
                    android:layout_width="211dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3.6g"
                    android:typeface="serif"
                    android:textColor="#330033"
                    android:textSize="18sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTotalFatLabel"
                    android:layout_width="198dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="Actual Total Fat: "
                    android:textColor="#330033"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/txtTotalFat"
                    android:layout_width="211dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3.6g"
                    android:typeface="serif"
                    android:textColor="#330033"
                    android:textSize="18sp" />
            </LinearLayout>


        </LinearLayout>

    </FrameLayout>

</LinearLayout>

